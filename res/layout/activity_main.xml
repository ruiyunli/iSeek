<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaseMapMain" >

    
    <TextView 
        android:id="@+id/logText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="log output"
        />
    
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapsView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/logText"
        android:clickable="true" />
    
    <ImageButton 
        android:id="@+id/btnViewSelect"
        android:background="@drawable/icon_button_traffic"
        android:contentDescription="@string/ImageViewSatellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_marginRight="50dp"
		android:layout_marginTop="50dp"
        />

    <ImageButton
	    android:id="@+id/btnMoveRight"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"	    
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="100dp"
	    android:layout_marginRight="20dp"
	    android:background="@drawable/btn_moveright" />

	<ImageButton
	    android:id="@+id/btnMoveUp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/btnMoveRight"
	    android:layout_toLeftOf="@id/btnMoveRight"
	    android:background="@drawable/btn_moveup" />
	
	<ImageButton
	    android:id="@+id/btnMoveLeft"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@id/btnMoveRight"
	    android:layout_toLeftOf="@id/btnMoveUp"
	    android:background="@drawable/btn_moveleft" />
	
	<ImageButton
	    android:id="@+id/btnMoveDown"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/btnMoveLeft"
	    android:layout_toLeftOf="@id/btnMoveRight"
	    android:background="@drawable/btn_movedown" />
	
	
</RelativeLayout>