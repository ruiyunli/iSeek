<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaseMapMain" >

    
    <TextView 
        android:id="@+id/logText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="log output"
        />
    
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapsView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/logText"
        android:clickable="true" />
    
    <LinearLayout 
		android:id="@+id/LinearLayoutMenu"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" >
        <ImageButton 
            android:id="@+id/btnMenuCall"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:src="@android:drawable/ic_menu_call"
			android:background="@drawable/btn_menu"
			android:contentDescription="@string/BtnMenuCall"
            />
        <Button 
            android:id="@+id/btnMenuRefresh"
			android:layout_weight="2"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:textColor="@color/white"
			android:text="@string/BtnMenuSeekGps"
			android:background="@drawable/btn_menu"
            />
        <ImageButton 
            android:id="@+id/btnMenuSettings"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:src="@android:drawable/ic_menu_preferences"
			android:background="@drawable/btn_menu"
			android:contentDescription="@string/BtnMenuSettings"
            />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bmapsView" >
        <Button 
            android:id="@+id/btnCorrCancle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_menu"
            android:textColor="@color/white"
          	android:text="CANCLE"
          	android:visibility="gone"
            />
        <Button 
            android:id="@+id/btnCorrOk"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_menu"
            android:textColor="@color/white"
            android:text="OK"
            android:visibility="gone"
            />
    </LinearLayout>
    
    <ImageButton 
        android:id="@+id/btnViewSelect"
        android:background="@drawable/icon_button_traffic"
        android:contentDescription="@string/BtnSatellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/bmapsView"
		android:layout_alignTop="@id/bmapsView"
		android:layout_marginRight="40dp"
		android:layout_marginTop="40dp"
        />

 
	    <ImageButton
		    android:id="@+id/btnMoveRight"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"	    
		    android:layout_alignParentRight="true"
		    android:layout_alignParentBottom="true"
		    android:layout_marginBottom="100dp"
	    	android:layout_marginRight="20dp"		    
		    android:background="@drawable/btn_moveright"
		    android:visibility="gone" />
	
		<ImageButton
		    android:id="@+id/btnMoveUp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_above="@id/btnMoveRight"
		    android:layout_toLeftOf="@id/btnMoveRight"
		    android:background="@drawable/btn_moveup" 
		    android:visibility="gone" />
		
		<ImageButton
		    android:id="@+id/btnMoveLeft"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@id/btnMoveRight"
		    android:layout_toLeftOf="@id/btnMoveUp"
		    android:background="@drawable/btn_moveleft" 
		    android:visibility="gone" />
		
		<ImageButton
		    android:id="@+id/btnMoveDown"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/btnMoveLeft"
		    android:layout_toLeftOf="@id/btnMoveRight"
		    android:background="@drawable/btn_movedown" 
		    android:visibility="gone" />
	
	
</RelativeLayout>