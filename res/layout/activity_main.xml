<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaseMapMain" >

    <!-- log输出 -->

    <TextView
        android:id="@+id/logText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="log output" />

    <!-- 百度地图 -->

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapsView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/logText"
        android:clickable="true" />

    <!-- 底部菜单 -->

    <LinearLayout
        android:id="@+id/LinearLayoutMenu"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnMenuCall"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_menu"
            android:contentDescription="@string/BtnMenuCall"
            android:src="@android:drawable/ic_menu_call" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/menu_press_true" />

        <Button
            android:id="@+id/btnMenuRefresh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/btn_menu"
            android:text="@string/BtnMenuSeekGps"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/menu_press_true" />

        <ImageButton
            android:id="@+id/btnMenuSettings"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_menu"
            android:contentDescription="@string/BtnMenuSettings"
            android:src="@android:drawable/ic_menu_preferences" />
    </LinearLayout>

    <!-- 校准退出按钮 -->

    <LinearLayout
        android:id="@+id/LinearLayoutCorr"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@id/bmapsView"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCorrCancle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_menu"
            android:text="@string/CANCLE_CH"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/menu_press_true" />

        <Button
            android:id="@+id/btnCorrOk"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_menu"
            android:text="@string/OK_CH"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- 视图切换按钮 -->

    <ImageButton
        android:id="@+id/btnViewSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bmapsView"
        android:layout_alignLeft="@id/bmapsView"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/icon_button_satellite"
        android:contentDescription="@string/BtnTraffic" />

    <!-- 缩放控件 -->

    <LinearLayout
        android:id="@+id/LinearLayoutZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnViewSelect"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_zoomin"
            android:contentDescription="@string/BtnZoomIn" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_zoomout"
            android:contentDescription="@string/BtnZoomOut" />
    </LinearLayout>

    <!-- 校正微调控件 -->

    <ImageButton
        android:id="@+id/btnMoveRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="240dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_moveright"
        android:contentDescription="@string/BtnMoveRight" />

    <ImageButton
        android:id="@+id/btnMoveUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnMoveRight"
        android:layout_toLeftOf="@id/btnMoveRight"
        android:background="@drawable/btn_moveup"
        android:contentDescription="@string/BtnMoveUp" />

    <ImageButton
        android:id="@+id/btnMoveLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnMoveRight"
        android:layout_toLeftOf="@id/btnMoveUp"
        android:background="@drawable/btn_moveleft"
        android:contentDescription="@string/BtnMoveLeft" />

    <ImageButton
        android:id="@+id/btnMoveDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMoveLeft"
        android:layout_toLeftOf="@id/btnMoveRight"
        android:background="@drawable/btn_movedown"
        android:contentDescription="@string/BtnMoveDown" />

</RelativeLayout>